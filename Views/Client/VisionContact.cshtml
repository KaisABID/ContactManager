<div class= "d-flex justify-content-between align-items-stretch">
    <div>
        <h2 class="text-center">Add Contact to Client</h2>
    </div>
    <div>
        @Html.ActionLink("LogOut", "Index", "UserController", null, new { @class = "btn btn-dark" })
    </div>
</div>

<br><br>
<table class="table table-bordered">
    <thead>
        <tr >
            <th class="text-primary">Name</th>
            <th class="text-primary">Tel1</th>
            <th class="text-primary">Tel2</th>
            <th class="text-primary">Mail</th>
            <th class="text-primary">   </th>
        </tr>
    </thead>

<tbody>
    @if (ViewBag.NbcontactsSansClient >0)
    {
        @foreach (var c in ViewBag.contactsSansClient)
        {
            <tr>
                <td>@c.ContactName</td>
                <td>@c.ContactTel1</td>
                <td>@c.ContactTel2</td>
                <td>@c.ContactEmail</td>
                <td>
                    <a href="/AddContactToClient/@ViewBag.IdClient/@c.ContactId"> Add </a>

                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="8">No contacts found</td>
        </tr>
    }
</tbody>
    
</table>